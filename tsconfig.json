{
  "extends": "expo/tsconfig.base.json",
  "compilerOptions": {
    "strict": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@/*": [
        "./*"
      ],
      "src/*": [
        "./src/*"
      ],
      "app/*": [
        "./app/*"
      ],
      "tailwind.config": [
        "./tailwind.config.js"
      ]
    },
    "allowImportingTsExtensions": false
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.d.ts",
    "nativewind-env.d.ts"
  ]
}